extends layout/main

block content
    .form_container
        form(action=routers.editProfile, method="post")
            label(for="avatar") Avatar
            input(type="file", id="avatar", name="avatar")
            input(type="text", placeholder="Name", name="name")
            input(type="email", placeholder="Email", name="email")
            input(type="submit", value="Update Profile")
        a.form-container__link(href=`/users${routers.changePassword}`) Change Password 
        
    include partials/socailLogin